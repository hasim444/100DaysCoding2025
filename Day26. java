System.out.print(" masukkan bilangan bulat : ");
        int angka = input.nextInt();
        String jenis = "";
        if (angka >=1 && angka <=5){
        jenis = "satuan";
    }else if (angka >= 10 && angka <=15){
        jenis = "puluhan";

    }else{
        System.out.print("bilangan ribuan,abaikan");
    }
        String sifat = (angka %2 == 0) ? "genap":"ganjil";
        System.out.println("input = "+ jenis + sifat);
        
    }
}
